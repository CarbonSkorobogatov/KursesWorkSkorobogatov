@model IEnumerable<Project>
@{ 
    ViewBag.Title = "Панель Администратора";
    Layout = "_AdminLayout";
}
<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th class="text-right">Номер проекта</th>
        <th>Наименование проекта</th>
        <th class="text-right">Цена(если указана)</th>
        <th class="text-center">Панель действий</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-right">@item.ProjectId</td>
            <td>@item.ProjectName</td>
            <td class="text-right">@item.ProjectPrice.ToString("c")</td>
            <td class="text-center">
                <form asp-action="DeleteProject" method="post">
                    <a asp-action="EditProject" class="btn btn-sm btn-warning"
                       asp-route-projectId="@item.ProjectId">
                        Изменить данные
                    </a>
                    <input type="hidden" name="ProjectId" value="@item.ProjectId" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Удалить проект
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="CreateProject" class="btn btn-primary fa-align-center">Добавить проект</a>
</div>

@model Cart

<div class="well">
    @if (Model.Lines.Count() > 0)
    {
        <small class="navbar-text">
            <b>Ваши покупки:</b>
            @Model.Lines.Sum(a => a.Quantity)
            @Model.ComputeTotalValue().ToString("c")
        </small>
    }
    <a class="btn btn-sm btn-default" asp-controller="Cart" asp-action="Index" asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
        <i class="fa fa-shopping-cart"></i>
    </a>
</div>
